@model FlatProject7.Models.FlatCounterDataViewModel

@{
    ViewBag.Title = "AddData";
}

<h2>AddData to flatCounter</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>@Html.DisplayNameFor(model => model.Flat.Street) : @Html.DisplayFor(model => model.Flat.Street)  </h4>
    <h4>@Html.DisplayNameFor(model => model.Flat.HouseNumber) : @Html.DisplayFor(model => model.Flat.HouseNumber) </h4>
    <h4>@Html.DisplayNameFor(model => model.Flat.FlatNumber) :  @Html.DisplayFor(model => model.Flat.FlatNumber) </h4>

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(model => model.Flat.Id);
    @Html.HiddenFor(model => model.Counter.Id);

    <!--Counter Value-->
    <div class="form-group">
        @Html.LabelFor(model => model.CounterData.Value, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.CounterData.Value, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CounterData.Value, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Add" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
